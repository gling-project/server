.publication-list-mobile


    //- nothing
    div(ng-show="getInfo().loading!=true && publications.length == 0")
        | {{'--.list.nothing' | translateText}}

    //- publication
    publication-widget-ctrl(ng-repeat="publication in publications",ng-info="{publication:publication,changeInterestCallback:changeInterestCallback}")

    //- loading
    .loading(ng-show="getInfo().loading===true")
        img(src="/assets/images/big_loading.gif")