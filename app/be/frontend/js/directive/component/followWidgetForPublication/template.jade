.follow-widget

    .follow-text(ng-hide="getInfo().displayText===true")
        div {{'--.followWidget.follow' | translateText:null:true}}

    .follow-widget-icon(ng-hide="getInfo().displayText===true",ng-click="follow()")
        button
            span.gling-icon.gling-icon-bell.selected(ng-show="getInfo().publication.following")
            span.gling-icon.gling-icon-bell2"(ng-hide="getInfo().publication.following")
    .follow-text(ng-show="getInfo().displayText===true")
        .link(ng-hide="getInfo().publication.following",ng-click="follow()")
            | {{'--.followWidget.followBusiness' | translateText}}
        .link(ng-show="getInfo().publication.following",ng-click="follow()")
            | {{'--.followWidget.stopFollowBusiness' | translateText}}