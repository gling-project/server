//- header
.modal-header
    button.btn.glyphicon.glyphicon-remove(style='float:right', ng-click='close()')
    h4.modal-title {{'--.business.registrationModal.title' | translateText}}

//- body
.modal-body.modal-login.business-registration

    //- navigation bar
    .wizard
        div(ng-class="{'current':badgeSelected==1}")
            span.wizard-badge(ng-class="{'badge-inverse':badgeSelected==1}") 1
            |             {{'--.customer.registrationModal.personal.title' | translateText}}
        div(ng-class="{'current':badgeSelected==2}")
            span.wizard-badge(ng-class="{'badge-inverse':badgeSelected==2}") 2
            |             {{'--.business.registrationModal.business.title' | translateText}}

    //- panel  personal  data
    div(ng-show='badgeSelected==1')

        //- description
        .modal-description  {{'--.business.registrationModal.personal.desc' | translateText}}

        //- facebook login button
        .facebook-login-btn-container
            a.facebookShare.ng-isolate-scope(ng-click="fb_login()")
                .facebookButton
                    .pluginButton
                        .pluginButtonContainer
                            .pluginButtonImage
                                button(type="button")
                                    i.pluginButtonIcon.img.sp_plugin-button-2x.sx_plugin-button-2x_favblue
                            span.pluginButtonLabel {{'--.registrationModal.facebook.btn' |translateText}}

        //- 'or'
        table.horizontal-split
            tr
                td
                    div
                td {{'--.generic.or' | translateText}}
                td
                    div

        // account form
        account-form-ctrl(ng-info='accountParam')

    //- panel business data
    div(ng-show='badgeSelected==2')

        business-creation-form-ctrl(ng-info="businessRegistrationParams")

//footer
.modal-footer(ng-show='badgeSelected==1')
    button#business-registration-btn-next.btn.gling-button-dark(ng-show='badgeSelected==1', ng-disabled='loading', type='button', ng-click='createAccount()')
        | {{'--.businessRegistration.createAccount' | translateText}}
    img(src='/assets/images/modal-loading.gif', ng-show='loading')
