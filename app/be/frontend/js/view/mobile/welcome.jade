.app-body
    .app-content.modal-login.welcome-page
        .scrollable
            .section.customer-registration.scrollable-content
                .welcome-header
                    // lang
                    select.gling-button-light(ng-model='languageService.currentLanguage', ng-options='lang.code as lang.language for lang in languageService.languages')
                    div
                        span.logo.gling-icon.gling-icon-logoapp.button-with-label
                        h2
                            | What's up in my shops
                h3
                    | {{'--.mobile.welcome.registration.desc' |translateText}}
                .generic-center
                    button.gling-button-dark(ng-click="navigateTo('/customer_registration')")
                        | {{'--.mobile.welcome.toCustomerRegistration.btn' | translateText}}
                .separator
                h3
                    | {{'--.mobile.welcome.login.desc' | translateText}}
                login-form-ctrl(ng-info='loginFormParam')
                .generic-center
                    button.gling-button-dark(ng-click='login()', ng-disabled='loading', type='button')
                        | {{'--.mobile.welcome.login.btn' | translateText}}
                .link(style='display: inline-block', ng-click="navigateTo('/forgot_password')")
                    | {{'--.login.form.button.forgotPassword' | translateText}}
