PUT           /business/address                               @be.lynk.server.controller.rest.BusinessRestController.editAddress()
PUT           /business/category                              @be.lynk.server.controller.rest.BusinessRestController.editBusinessCategory()
PUT           /business/illustration                          @be.lynk.server.controller.rest.BusinessRestController.editIllustration()
PUT           /business/landscape                             @be.lynk.server.controller.rest.BusinessRestController.editLandscape()
POST          /business/ask_publication                       @be.lynk.server.controller.rest.BusinessRestController.askPublication()
POST          /business/stop_publish                          @be.lynk.server.controller.rest.BusinessRestController.stopPublication()

